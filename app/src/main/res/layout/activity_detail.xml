<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity"
    android:padding="5dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_marginRight="10dp">
        <ImageView
            android:id="@+id/img_film"
            android:layout_width="150dp"
            android:layout_height="220dp"
            android:src="@color/colorPrimary"
            android:scaleType="fitXY"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_film"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_toRightOf="@id/img"/>
    <TextView
        android:id="@+id/txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="@string/date"
        android:layout_below="@id/txt_title"
        android:layout_toRightOf="@id/img"/>
    <TextView
        android:id="@+id/s_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_score"
        android:textStyle="bold"
        android:layout_below="@id/txt_date"
        android:layout_toRightOf="@id/img"/>
    <TextView
        android:id="@+id/txt_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/value"
        android:layout_marginBottom="3dp"
        android:layout_below="@id/s_score"
        android:layout_toRightOf="@id/img"/>
    <TextView
        android:id="@+id/s_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/language"
        android:textStyle="bold"
        android:layout_below="@id/txt_score"
        android:layout_toRightOf="@id/img"/>
    <TextView
        android:id="@+id/txt_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/value"
        android:layout_below="@id/s_language"
        android:layout_toRightOf="@id/img"
        android:layout_marginBottom="3dp"/>
    <TextView
        android:id="@+id/s_runtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/runtime"
        android:textStyle="bold"
        android:layout_below="@id/txt_language"
        android:layout_toRightOf="@id/img"/>
    <TextView
        android:id="@+id/txt_runtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/value"
        android:layout_marginBottom="3dp"
        android:layout_below="@id/s_runtime"
        android:layout_toRightOf="@id/img"/>
    <TextView
        android:id="@+id/s_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/desc"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_below="@id/img"/>
    <TextView
        android:id="@+id/txt_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/value"
        android:justificationMode="inter_word"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/s_desc"/>
</RelativeLayout>